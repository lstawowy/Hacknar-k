<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.admin.hacknark.Profile"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:layout_width="182dp"
        android:layout_height="71dp"
        android:layout_marginStart="8dp"
        android:allowUndo="false"
        android:background="@drawable/button_tlo_ranking2"
        android:text="Nazwa wikinga"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032" />

    <Button
        android:id="@+id/button"
        android:layout_width="129dp"
        android:layout_height="65dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_tlo_ranking"
        android:onClick="JumpTo"
        android:text="Ranking"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/progressBar"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button2"
        android:layout_width="129dp"
        android:layout_height="55dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_tlo_ranking"
        android:onClick="JumpTo"
        android:text="Osiągnięcia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button3"
        android:layout_width="129dp"
        android:layout_height="55dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_tlo_ranking"
        android:onClick="JumpTo"
        android:text="Ścieżka kariery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        tools:ignore="MissingConstraints" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="348dp"
        android:layout_height="15dp"
        android:background="@color/colorPrimaryDark"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="93dp" />


</android.support.constraint.ConstraintLayout>